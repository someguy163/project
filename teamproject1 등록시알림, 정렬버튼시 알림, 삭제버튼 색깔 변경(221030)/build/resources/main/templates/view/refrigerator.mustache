<div class="container back">
<form action="/view/create" method="post">
    <table align="center" border=1px bordercolor="gray" class="table">
        <tr align="center" bgcolor="#EAEAEA">
            <th width="350">재료명</th>
            <th width="350">유통기한 시작일</th>
            <th width="350">구분</th>
        </tr>
        <tr>
            <td width="350"><input type="text" class="form-control" name="name"></td>
            <td width="350"><input type="date" class="form-control" name="start"></td>
            <td width="350">
                <select name="kind" class="form-select form-select-sm align-center"
                        aria-label=".form-select-sm example text-center">
                    <option selected>종류를 선택하세요</option>
                    <option value="야채">야채</option>
                    <option value="과일">과일</option>
                    <option value="채소">채소</option>
                    <option value="해당없음">해당없음</option>
                </select>
            </td>
        </tr>
        <tr align="center" bgcolor="#EAEAEA">
            <th width="350">폐기일</th>
            <th width="350">수량 및 설명</th>
            <th width="350">이미지 삽입</th>
        </tr>
        <tr>
            <td width="350"><input type="date" class="form-control" name="enddate"></td>
            <td width="350"><textarea rows="2" class="textarea" style="width:100%; resize: none" name="nameinfo"></textarea></td>
            <td width="350"><input type="file" class="form-control" name="image"></td>
        </tr>
    </table>

